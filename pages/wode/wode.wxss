/* pages/wode/wode.wxss */
page{
  background:url(http://ozpexz78z.bkt.clouddn.com/wodebg.png) no-repeat;  
  background-size:100%;
}
.userinfo {
  padding:0 24rpx;
}
.bg{
  width:100%;
  background:url(http://ozpexz78z.bkt.clouddn.com/wdtxbg.png) no-repeat;  
  background-size:100%;
  height:370rpx;
  flex-direction: column;
  align-items: center;
  box-sizing:border-box;
  display: flex;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-top:110rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #fff;
  font-weight:900;
}
/* 列表 */
.alllist{
  padding:0 24rpx;
  margin-top:15rpx;
}
.list{
  display: flex;
  line-height:90rpx;
  flex-direction:row;
  justify-content:center;
  align-items: center;
  background:#ffffff;
  border-radius:10rpx;
}
.left_tu{
  width:90rpx;
  height:90rpx;
}
.left_tu image{
  width:100%;
  height:100%;
  padding:26rpx 28rpx;
  box-sizing:border-box;
}
.l-add{
  flex:1;
  font-size:26rpx;
  color:#26282a;
}
.right_tu{
  width:90rpx;
  height:90rpx;
}
.right_tu image{
  width:100%;
  height:100%;
  padding:28rpx 34rpx;
  box-sizing:border-box;
}
.renwu>.list:first-child{
  border-radius:10rpx 10rpx 0 0;
  position:relative;
}
.renwu>.list:first-child::after{
  position: absolute;
  right: 0;
  bottom: 0;
  left: 80rpx;
  height: 1px;
  content: '';
  background-color: #c8c7cc;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
}
.renwu>.list:last-child{
  border-radius:0 0 10rpx 10rpx;
}
.renwu{
  margin-top:15rpx;
  border-radius:20rpx;  
}

.listPub{
  border-radius:0;
  position: relative;
}
.listPub::after{
  position: absolute;
  right: 0;
  bottom: 0;
  left: 80rpx;
  height: 1px;
  content: '';
  background-color: #c8c7cc;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
}

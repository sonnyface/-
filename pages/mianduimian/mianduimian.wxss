  background-size:100%;
}
.container{
  width:100%;
  height:100%;
  padding:0 24rpx;
}
.swiper-tab{
  width: 100%; 
  text-align: center; 
  line-height: 80rpx;
  background:#fff;
  box-sizing:border-box;
  border-radius:10rpx;
}
.swiper-tab-list{
  font-size: 30rpx; 
  display: inline-block; 
  width:30%; 
  color: #656e84; 
}
.on{
  color: #000000; 
  border-bottom: 5rpx solid #ff6490;
}
.swiper-box{ 
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
 }
.swiper-box view{ 
  color:#fff;
}

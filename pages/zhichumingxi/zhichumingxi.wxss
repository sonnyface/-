page {
  background: #f5f5f5;
}

.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}

.content {
  width:100%;
  background: #fff;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 20rpx;
}

.list {
  width: 100%;
  display: flex; 
  position: relative;   
}
.list ::after{
			position: absolute;
			right: 0;
			bottom: 0;
			left: 0;
			height: 0.05rem;
			content: '';
			background-color: #ddd;
			-webkit-transform: scaleY(0.5);
			transform: scaleY(0.5);
		}

.left {
  flex: 1;
  padding-left: 10rpx;
}
.desc{
  font-size: 30rpx;
  line-height: 60rpx;  
}
.date{

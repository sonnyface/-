/* pages/accpetjob/accpetjob.wxss */

page {
  background: #f5f5f5;
}

.container {
  width: 100%;
  height: 100%;
}

.header {
  width: 100%;
  height: 90rpx;
  background: #fff;
  display: flex;
  justify-content: center;
}

.list {
  width: 30%;
  height: 86rpx;
  margin: 0 5%;
  font-size: 30rpx;
  color: #333;
  line-height: 86rpx;
  text-align: center;
  border-bottom: 4rpx solid #fff;
}

.list.on {
  width: 30%;
  height: 86rpx;
  margin: 0 5%;
  font-size: 30rpx;
  line-height: 86rpx;
  text-align: center;
  border-bottom: 4rpx solid #ff6490;
  color: #ff6490;
}

.tapList {
  width: 100%;
}

/* 紧急任务 */

.jinji {
  width: 100%;
  box-sizing: border-box;
  padding: 0 24rpx;
  margin-bottom: 16rpx;
}

.jinji_top {
  width: 186rpx;
  height: 56rpx;
}

.time {
  line-height: 85rpx;
  font-size: 30rpx;
  color: #292d36;
  font-weight: 800;
  text-align: center;
}

/* 内容 */

.neirong {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 5rpx 6rpx #ddd;
}

.neirong_list {
  position: relative;
}

.neirong_list::after {
  position: absolute;
  right: 10rpx;
  bottom: 0;
  left: 10rpx;
  height: 1px;
  content: '';
  background-color: #c8c7cc;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.rong_top {
  display: flex;
  line-height: 60rpx;
  padding: 0 24rpx;
}

.rong_top view {
  width: 50%;
}

.name {
  font-size: 28rpx;
  color: #171719;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.num {
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

.dizhi {
  display: flex;
  padding: 0 24rpx;
}

.dizhi_left {
  flex: 1;
  display: flex;
  line-height: 60rpx;
}

.dizhi_left view {
  display: flex;
  font-size: 24rpx;
}

.dizhi_left view:last-child {
  padding-left: 45rpx;
}

.dizhi_right {
  height: 60rpx;
  padding: 0 20rpx;
  background: #ff6490;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10rpx;
}

.rong_boot { 
  font-size: 24rpx;
  padding: 0 24rpx;
  line-height: 60rpx;
  overflow: hidden;
}

.boot_left {
  float: left;
}

.boot_left view {
  float: left;
  padding-right: 20rpx;
}

.boot_right {
  float: right;
  text-align: right;
}

.address {
  box-sizing: border-box;
  font-size: 24rpx;
  color: #333;
  height: 43rpx;
  padding-bottom: 17rpx;
  display: flex;
}


/* 紧急任务 */

.jinji {
  margin-top: 60rpx;
  width: 100%;
}

.jinji_top {
  width: 186rpx;
  height: 56rpx;
  margin-bottom: 30rpx;
}

.time {
  line-height: 74rpx;
  font-size: 24rpx;
  color: #333;
}

.renwu_list, .yiwancheng_list {
   /* background: #fff;  */
  
  box-sizing: border-box;
  padding: 0 24rpx;
  width: 100%;
}

/* 内容 */

.neirong {
  background: #fff;
  border-radius: 20rpx;
}

.neirong_list {
  position: relative;
}

.neirong_list::after {
  position: absolute;
  right: 10rpx;
  bottom: 0;
  left: 10rpx;
  height: 1px;
  content: '';
  background-color: #c8c7cc;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.rong_top {
  display: flex;
  line-height: 60rpx;
  padding: 0 24rpx;
}

.rong_top view {
  width: 50%;
}

.name {
  font-size: 28rpx;
  color: #171719;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.num {
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

.dizhi {
  display: flex;
  padding: 0 24rpx;
}

.dizhi_left {
  flex: 1;
  display: flex;
  line-height: 60rpx;
}

.dizhi_left view {
  display: flex;
  font-size: 24rpx;
}

.dizhi_left view:last-child {
  padding-left: 45rpx;
}

.dizhi_right {
  width: 110rpx;
  height: 60rpx;
  background: #ff3030;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10rpx;
}

.rong_boot {
  display: flex;
  font-size: 24rpx;
  padding: 0 24rpx;
  line-height: 60rpx;
}

.boot_left {
  display: flex;
  width: 50%;
}

.boot_left view {
  width: 50%;
}

.boot_right {
  width: 60%;
  text-align: right; 
}


/* pages/wallet/wallet.wxss */

page {
  background: #f5f5f5;
}

.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding:0 20rpx;
}
.header{
  width:100%;
  line-height: 85rpx;
  text-align:right;
  font-size:30rpx;
  color:#1d1d1b;
}
.content{
  width:100%;
  height:400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;

}
.demon{
  width:100%;
  height:186rpx;
  display: flex;  
  justify-content: center;
  align-content: center;
}
.demon image{
  width:200rpx;
  height:186rpx;
}
.money{
  text-align: center;
  margin-top:40rpx;
}
.money text:nth-of-type(1){
  font-size: 36rpx;
  color:#3e4452;
  display: block;
  padding-bottom:28rpx;  
}
.money text:nth-of-type(2){
  font-size: 50rpx;
  color:#2b2f36;
  display: block;
    
}
button{
  width:90%;
  height:80rpx;
  color:#fff;
  line-height:80rpx;
  background: #ff6490;
  margin-top:70rpx;
}

.btn{
  background:#f695b0;
  color:#f5f5f5
}
/* pages/jishirenwu/jishirenwu.wxss */

page {
  background: #f5f5f5;
}

.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.header {
  width: 100%;
  text-align: center;
  /* position:relative; */
  position: fixed;
  top: 0;
  background: #f5f5f5;
  z-index: 999;
}

.headImg {
  width: 470rpx;
  height: 139rpx;
}

.headContent {
  width: 400rpx;
  height: 55rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 68rpx;
  margin: auto;
  display: flex;
}

.top {
  width: 180rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-content: center;
}

.top:nth-of-type(1) {
  margin-right: 55rpx;
}

.icoImg {
  width: 50rpx;
  height: 55rpx;
}

.text {
  font-size: 26rpx;
  color: #393939;
  padding-left: 15rpx;
  line-height: 55rpx;
}

/* 紧急任务 */

.jinji {
  margin-top: 160rpx;
  width: 100%;
}

.renwu_list {
  margin-bottom: 24rpx;
}

.time {
  line-height: 74rpx;
  font-size: 24rpx;
  color: #333;
}

/* 内容 */

.neirong {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0rpx 5rpx 5rpx #ddd;
}

.neirong_list {
  position: relative;
}

.neirong_list::after {
  position: absolute;
  right: 10rpx;
  bottom: 0;
  left: 10rpx;
  height: 1px;
  content: '';
  background-color: #c8c7cc;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.rong_top {
  display: flex;
  line-height: 60rpx;
  padding: 0 24rpx;
}

.rong_top view {
  width: 50%;
}

.name {
  font-size: 28rpx;
  color: #171719;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.num {
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

.dizhi {
  display: flex;
  padding: 0 24rpx;
}

.dizhi_left {
  flex: 1;
  display: flex;
  line-height: 60rpx;
}

.dizhi_left view {
  display: flex;
  font-size: 24rpx;
}

.dizhi_left view:last-child {
  padding-left: 45rpx;
}

.dizhi_right {
  width: 110rpx;
  height: 60rpx;
  background: #ff3030;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10rpx;
}

.rong_boot { 
  font-size: 24rpx;
  padding: 0 24rpx;
  line-height: 60rpx;
  overflow: hidden;
}

.boot_left {
  float: left;
}

.boot_left view {
  float: left;
  padding-right: 20rpx;
}

.boot_right {
  float: right;
  text-align: right;
}

.address {
